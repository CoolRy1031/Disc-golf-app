<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/courses/edit.css" />
<%- include('../partials/nav') %>


<main>
  <h1><%= title %></h1>
  <% if (course.owner.equals(user?.profile._id)) { %>
  <form id="edit-form" action="/courses/<%= course._id %>?_method=PUT " method="POST">
    <label for="name-input" autocomplete="off">Course-Name:</label>
    <input type="text" name="name" id="name-input" autocomplete="off">
    <label for="par-input">Par:</label>
    <input type="text" name="par" id="par-input">
    <label for="holes-select">Holes:</label>
    <select name="holes" id="holes-select">
      <option value="9">9</option>
      <option value="18">18</option>
    </select>
    <button type="submit">Update Course</button>
  </form>
  <% } %>
</main>






<%- include('../partials/footer') %>